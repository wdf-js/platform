{
	"compilerOptions": {
		"outDir": "dist",
		"target": "esnext",
		"useDefineForClassFields": true,
		"lib": ["esnext"],
		"experimentalDecorators": true,
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"@wdf/platform": ["../dist"],
		},
	},
	"include": ["src"],
}
